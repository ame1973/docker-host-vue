version: "3.7"

services:
  php:
    build:
      context: .
      dockerfile: ./config/php/Dockerfile
    restart: unless-stopped
    tty: true
    working_dir: /var/www/
    volumes:
      - ./src:/var/www
      - ./config/php/php.ini:/usr/local/etc/php/conf.d/php.ini
    networks:
      - internal

  mysql:
    image: mysql/mysql-server:8.0.23
    restart: unless-stopped
    tty: true
    environment:
      MYSQL_DATABASE: laravel
      MYSQL_ROOT_PASSWORD: password
      MYSQL_ROOT_HOST: 172.%.%.%
    volumes:
      - ./volumes/mysql:/var/lib/mysql/
      - ./config/mysql/my.cnf:/etc/mysql/my.cnf
    networks:
      - internal

  nginx:
    image: nginx:stable-alpine
    restart: unless-stopped
    tty: true
    volumes:
      - ./src:/var/www
      # - ./volumes/nginx/storage/public:/var/www/public/storage
      - ./volumes/nginx/log:/var/log/nginx
      - ./config/nginx/default.conf:/etc/nginx/conf.d/default.conf
    networks:
      - internal
      - traefik-proxy
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=traefik-proxy"
      - "traefik.http.routers.YOUR_PROJECT_NAME.rule=Host(`YOUR_PROJECT_DOMAIN.com`)"
      - "traefik.http.routers.YOUR_PROJECT_NAME.entrypoints=websecure"

networks:
  traefik-proxy:
    external: true
  internal:
    driver: bridge
