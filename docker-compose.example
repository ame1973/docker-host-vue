version: "3.7"

services:
  
  node:
    build:
      context: .
      dockerfile: ./config/node/Dockerfile
    restart: unless-stopped
    tty: true
    working_dir: /var/www/
    volumes:
      - ./src:/var/www
    entrypoint: ["bash", "-c","npm ci && npm run build"]
    networks:
      - internal

  nginx:
    image: nginx:stable-alpine
    restart: unless-stopped
    tty: true
    working_dir: /var/www/
    volumes:
      - ./src:/var/www
      - ./volumes/nginx/log:/var/log/nginx
      - ./config/nginx/default.conf:/etc/nginx/conf.d/default.conf
    networks:
      - internal
      - traefik-proxy
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=traefik-proxy"
      - "traefik.http.routers.YOUR_PROJECT_NAME.rule=Host(`YOUR_PROJECT_DOMAIN.com`)"
      - "traefik.http.routers.YOUR_PROJECT_NAME.entrypoints=websecure"

networks:
  traefik-proxy:
    external: true
  internal:
    driver: bridge
